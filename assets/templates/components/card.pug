include icon
include cardAction
include headline

mixin card(inputData, params)
    -
        var data = Object.assign({
            colorTheme: 'standard',
            alignment: 'left',
            size: 'm',
            columns: 1,
            rows: 1,
            orientation: 'vertical',
            mediaPlacement: 'first',
            mediaRatio: 1.5,
            actions: true,
            commentCount: Math.floor(Math.random() * 100),
            storyType : 'News',
            trending : false,
            ornament: false,
            headlinePosition: 'bottom',
            borders: { bottom: 'light' }
            }, inputData, params)
        var now = new Date().getTime();
        var timestamp = '';
        if (now - data.timestamp < 3600000) {
            timestamp = `${Math.round((now - data.timestamp) / 60000)} minutes ago`;
        }
        var borderClass = '';
        for (const border in data.borders) {
            borderClass += `l--border-${border}-${data.borders[border]} `
        }
    .card(
        class=`
            card--theme-${data.colorTheme}
            card--${data.size}
            card--${data.orientation}
            card--${data.mediaPlacement}
            card--${data.actions ? 'has-actions' : 'no-actions'}
            l--grid-col-span-${data.columns}
            l--grid-row-span-${data.rows}
            ${borderClass}`
        data-sbid=data.id
    )
        .card--content.l--padding-bottom-s(
            class=`
                ${data.mediaPlacement === 'behind' ? 'card--text-inset' : ''}`
            style=`
                ${data.mediaPlacement === 'behind' ? `
                    background-image:url(${data.image});
                    padding-top: calc((1 / ${data.mediaRatio}) * 100%)` 
                    : ``
                }`
        )
            .card--text(
                class=`
                    ${data.alignment === 'center' ? 'card--text-center' : 'card--text-left' }
                    card--text-${data.headlinePosition}`
                )
                +headline(data)
                if data.image && data.mediaPlacement === 'middle'
                    .card--image.l--margin-top-m.l--margin-bottom-m
                        img(src=data.image)
                if data.summary
                    .card--summary.t--family-serif.t--size-s.l--margin-bottom-m #{data.summary}
                if data.byline || timestamp
                    .card--byline.t--family-sansCondensed.t--size-s.t--weight-light.t--color-nickel
                        if data.byline
                            if data.avatar
                                .card--byline-avatar
                                    img(src=data.avatar)
                            .card--byline-attribution by #{data.byline}
                        if data.byline && timestamp 
                            .card--byline-divider &nbsp;Â·&nbsp;
                        if timestamp 
                            .card--byline-timestamp #{timestamp}
                if data.trending
                    .card--trending.t--family-sansCondensed.t--color-green-light.l--margin-top-s.t--size-xs
                        .card--trending-icon
                            +icon('trending')
                        .card--trending-label.l--margin-left-s Trending

                if data.orientation === 'horizontal' && data.actions
                    .card--actions.l--margin-top-s.l--padding-top-s
                        +cardAction()
                        +cardAction({icon: 'share', label: 'Share'})
                        +cardAction({iconAlignment: 'right', icon: 'comments', label: data.commentCount})
            if data.image && data.mediaPlacement !== 'middle' && data.mediaPlacement !== 'behind'
                .card--image
                    img(src=data.image)
        if data.orientation === 'vertical' && data.actions
            .card--actions.l--margin-top-s.l--padding-top-s
                +cardAction()
                +cardAction({icon: 'share', label: 'Share'})
                +cardAction({iconAlignment: 'right', icon: 'comments', label: data.commentCount})

