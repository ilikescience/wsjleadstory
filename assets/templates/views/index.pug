extends ../layouts/default

include ../components/card
include ../components/strap

block content
    - var ahed = locals.articles.filter((article) => article.flashline === 'The A-hed' || article.flashline === 'The A-Hed')
    - var business = locals.articles.filter((article) => article.category === 'Business')
    - var life = locals.articles.filter((article) => article.storyType === 'Life')
    .l--grid.l--margin-top-xl
        .l--grid-row
            +strap('Spotlight Seven')
        .l--grid-row
            .l--grid-col.l--grid-col-span-3
                +card(locals.articles[0], {
                    size: 'l',
                    image: false,
                    actions: false
                })
                +card(locals.articles[1], {
                    actions: false,
                    image: false
                })
                +card(locals.articles[2], {
                    actions: false,
                    image: false
                })
                +card(locals.articles[3], {
                    actions: false,
                    image: false
                })
            
            .l--grid-col.l--grid-col-span-5
                +card(locals.articles[4], {
                    size: 'xl',
                    mediaPlacement: 'middle'
                })
                +card(locals.articles[5], {
                    byline: false,
                    actions: false,
                    orientation: 'horizontal',
                    mediaPlacement: 'last',
                })
                +card(locals.articles[6], {
                    byline: false,
                    actions: false,
                    orientation: 'horizontal',
                    mediaPlacement: 'last',
                    image: false
                })

            .l--grid-col.l--grid-col-span-2
                +card(locals.articles[7], {
                    summary: false,
                    byline: false,
                    actions: false,
                    timestamp: false
                })
                +card(locals.articles[8], {
                    summary: false,
                    byline: false,
                    actions: false,
                    timestamp: false
                })
                +card(locals.articles[9], {
                    summary: false,
                    byline: false,
                    actions: false,
                    timestamp: false
                })
                +card(locals.articles[10], {
                    summary: false,
                    byline: false,
                    actions: false,
                    timestamp: false
                })
    .l--grid.l--margin-top-xl
        .l--grid-row
            +strap('Nested grids')
        .l--grid-row
            .l--grid-col.l--grid-col-span-2
                +card(locals.articles[0], {
                    size: 'l'
                })
                .l--grid
                    .l--grid-row
                        .l--grid-col
                            +card(locals.articles[1], {
                                image: false,
                                actions: false
                            })
                        .l--grid-col
                            +card(locals.articles[2], {
                                image: false,
                                actions: false
                            })
            .l--grid-col
                +card(locals.articles[3], {
                    actions: false
                })
                +card(locals.articles[4], {
                    actions: false
                })
    .l--grid.l--margin-top-xl
        .l--grid-row
            +strap('Business')
        .l--grid-row
            .l--grid-col.l--grid-col-span-2
                +card(business[0], {
                    size: 'l'
                })
            .l--grid-col
                +card(business[1], {
                    actions: false,
                    image: false,
                    byline: false
                })
                +card(business[2], {
                    actions: false,
                    image: false,
                    byline: false
                })
                +card(business[3], {
                    actions: false,
                    image: false,
                    byline: false
                })
    .l--grid.l--margin-top-xl
        .l--grid-row
            +strap('Enterprise')
        .l--grid-row
            .l--grid-col.l--grid-col-span-3
                +card(locals.articles[5], {
                    actions: false,
                    image: false
                })
                +card(locals.articles[6], {
                    actions: false,
                    image: false
                })
                +card(ahed[0], {
                    alignment: 'center',
                    size: 'l',
                    ornament: 'ahed',
                    mediaPlacement: 'last',
                    image: 'https://cl.ly/3I200y2D0D2q/Screen%20Shot%202018-08-09%20at%204.51.12%20PM.png'
                })
            .l--grid-col.l--grid-col-span-4
                +card(life[1], {
                    size: 'xl',
                    alignment: 'center',
                    ornament: 'leder'
                })
                +card(life[0], {
                    orientation: 'horizontal',
                    actions: false,
                    mediaPlacement: 'last'
                })
                +card(life[2], {
                    orientation: 'horizontal',
                    actions: false,
                    mediaPlacement: 'last'
                })
    .l--grid.l--margin-top-xl
        .l--grid-row
            +strap('Overlays')
        .l--grid-row
            .l--grid-col
                +card(life[0], {
                    mediaPlacement: 'behind',
                    size: 'l',
                    byline: false,
                    timestamp: false,
                    actions: false
                })
                .l--grid
                    .l--grid-row
                        .l--grid-col
                            +card(life[7], {
                                mediaPlacement: 'behind',
                                mediaRatio: 0.66,
                                actions: false,
                                summary: false
                            })
                        .l--grid-col
                            +card(life[6], {
                                mediaPlacement: 'behind',
                                mediaRatio: 0.66,
                                actions: false,
                                summary: false
                            })
            .l--grid-col
                +card(life[5], {
                    mediaPlacement: 'behind',
                    size: 'xl',
                    mediaRatio: 1,
                    ornament: 'leder',
                    alignment: 'center',
                    actions: false
                })
                +card(life[11], {
                    mediaPlacement: 'behind',
                    size: 'l',
                    mediaRatio: 0.75,
                    byline: false,
                    timestamp: false,
                    actions: false
                })